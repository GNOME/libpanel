<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ExampleWindow" parent="AdwApplicationWindow">
    <property name="title">Panel Example</property>
    <property name="default-width">900</property>
    <property name="default-height">600</property>
    <style>
      <class name="devel"/>
    </style>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar" id="headerbar">
            <child type="start">
              <object class="GtkMenuButton">
                <property name="always-show-arrow">true</property>
                <property name="icon-name">document-open-symbolic</property>
              </object>
            </child>
            <child type="start">
              <object class="PanelDockSwitcher" id="dockswitcher">
                <property name="dock">dock</property>
              </object>
            </child>
            <child type="title">
              <object class="GtkCenterBox">
                <child type="start">
                  <object class="GtkMenuButton">
                    <property name="always-show-arrow">true</property>
                    <property name="icon-name">computer-symbolic</property>
                  </object>
                </child>
                <child type="center">
                  <object class="GtkButton">
                    <property name="width-request">300</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkBox">
                    <property name="margin-start">6</property>
                    <child>
                      <object class="GtkButton">
                        <property name="icon-name">media-playback-start-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparator">
                        <property name="orientation">vertical</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="margin-start">0</property>
                        <property name="margin-end">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">pan-down-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">window_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox">
                <style>
                  <class name="linked"/>
                </style>
                <child>
                  <object class="GtkToggleButton" id="frame_header_bar">
                    <property name="active">true</property>
                    <property name="label">H</property>
                  </object>
                </child>
                <child>
                  <object class="GtkToggleButton" id="frame_tab_bar">
                    <property name="group">frame_header_bar</property>
                    <property name="label">T</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="PanelDock" id="dock">
            <property name="reveal-start">false</property>
            <property name="reveal-bottom">true</property>
            <property name="reveal-end">false</property>
            <property name="vexpand">true</property>
            <child>
              <object class="PanelGrid" id="grid">
                <signal name="create-frame" handler="create_frame_cb"/>
              </object>
            </child>
            <child type="end">
              <object class="PanelPaned">
                <property name="orientation">vertical</property>
                <child>
                  <object class="PanelFrame">
                    <child>
                      <object class="PanelWidget">
                        <!-- you might want to set background-rgba by retrieving
                             your document colors, such as from GtkSourceStyleScheme -->
                        <property name="background-rgba">#fff</property>
                        <property name="title">Color</property>
                        <property name="can-maximize">true</property>
                        <property name="icon-name">color-select-symbolic</property>
                        <child>
                          <object class="GtkColorChooserWidget">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="title">Swatches</property>
                        <property name="icon-name">preferences-color-symbolic</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="PanelFrame">
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="title">Adjustments</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Styles</property>
                        <property name="background-rgba">#fff</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="PanelFrame">
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Layers</property>
                        <property name="background-rgba">#fff</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Channels</property>
                        <property name="background-rgba">#fff</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="title">Paths</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="bottom">
              <object class="PanelPaned">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="PanelFrame">
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="icon-name">video-joined-displays-symbolic</property>
                        <property name="title">Remote Displays</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkTextView">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="title">Timeline</property>
                        <property name="icon-name">slideshow-symbolic</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="start">
              <object class="PanelPaned">
                <property name="orientation">vertical</property>
                <child>
                  <object class="PanelFrame">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="icon-name">folder-symbolic</property>
                        <property name="title">Files</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkTextView">
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="title">Targets</property>
                        <property name="icon-name">applications-engineering-symbolic</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="GtkListBox"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="PanelFrame">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="PanelWidget">
                        <property name="background-rgba">#fff</property>
                        <property name="icon-name">help-contents-symbolic</property>
                        <property name="title">Documentation</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkTextView">
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="PanelStatusbar">
            <child>
              <object class="GtkMenuButton">
                <property name="direction">up</property>
                <property name="can-focus">false</property>
                <property name="menu-model">vcs_menu</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkImage">
                        <property name="resource">/builder-vcs-branch-symbolic.svg</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">main</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkImage">
                <property name="resource">/warnings-symbolic.svg</property>
                <property name="margin-start">9</property>
                <property name="margin-end">6</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">3</property>
                <property name="margin-end">3</property>
              </object>
            </child>
            <child>
              <object class="GtkImage">
                <property name="resource">/errors-symbolic.svg</property>
                <property name="margin-start">6</property>
                <property name="margin-end">6</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">1</property>
                <property name="margin-end">9</property>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="margin-start">9</property>
                <property name="margin-end">9</property>
                <property name="label">Indexing sources …</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="hexpand">true</property>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="direction">up</property>
                <property name="can-focus">false</property>
                <property name="menu-model">encoding_menu</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">UTF-8</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="can-focus">false</property>
                <property name="direction">up</property>
                <property name="menu-model">syntax_menu</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">C</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="focusable">false</property>
                <property name="direction">up</property>
                <property name="menu-model">crlf_menu</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">LF</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="focusable">false</property>
                <property name="direction">up</property>
                <property name="menu-model">tabs_v_spaces_menu</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">2:2 Spaces</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="focusable">false</property>
                <property name="focus-on-click">false</property>
                <property name="direction">up</property>
                <property name="popover">
                  <object class="GtkPopover">
                    <property name="width-request">200</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-bottom">12</property>
                        <child>
                          <object class="GtkLabel">
                            <attributes>
                              <attribute name="weight" value="bold"/>
                            </attributes>
                            <property name="label">Go to Line</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSpinButton">
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">6</property>
                            <property name="width-chars">5</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="width-request">75</property>
                            <property name="halign">end</property>
                            <property name="label">Go</property>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Ln 1, Col 1</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">INS</property>
                <property name="margin-start">9</property>
                <property name="margin-end">9</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="page_menu">
    <section>
      <item>
        <attribute name="label">Maximize</attribute>
        <attribute name="action">page.maximize</attribute>
        <attribute name="accel">&lt;shift&gt;F11</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Save</attribute>
        <attribute name="action">page.save</attribute>
        <attribute name="accel">&lt;control&gt;s</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Close Page</attribute>
        <attribute name="action">frame.close-page-or-frame</attribute>
        <attribute name="accel">&lt;control&gt;w</attribute>
      </item>
    </section>
  </menu>
  <menu id="window_menu">
    <section>
      <item>
        <attribute name="label">Create new document</attribute>
        <attribute name="action">document.new</attribute>
        <attribute name="accel">&lt;ctrl&gt;n</attribute>
      </item>
    </section>
  </menu>
  <menu id="vcs_menu">
    <section>
      <attribute name="label">Branches</attribute>
      <item>
        <attribute name="label">main</attribute>
        <attribute name="action">vcs.switch-branch('main')</attribute>
      </item>
      <item>
        <attribute name="label">gnome-41</attribute>
        <attribute name="action">vcs.switch-branch('gnome-41')</attribute>
      </item>
      <item>
        <attribute name="label">gnome-42</attribute>
        <attribute name="action">vcs.switch-branch('gnome-42')</attribute>
      </item>
    </section>
  </menu>
  <menu id="crlf_menu">
    <section>
      <attribute name="label">Line Ending</attribute>
      <item>
        <attribute name="label">Linux (LF)</attribute>
        <attribute name="action">newline.type('lf')</attribute>
      </item>
      <item>
        <attribute name="label">Windows (CR/LF)</attribute>
        <attribute name="action">newline.type('crlf')</attribute>
      </item>
      <item>
        <attribute name="label">Mac Classic (CR)</attribute>
        <attribute name="action">newline.type('cr')</attribute>
      </item>
    </section>
  </menu>
  <menu id="encoding_menu">
    <section>
      <attribute name="label">Encoding</attribute>
      <item>
        <attribute name="label">UTF-8</attribute>
      </item>
      <item>
        <attribute name="label">ASCII</attribute>
      </item>
      <item>
        <attribute name="label">Western (ISO 8895-1)</attribute>
      </item>
    </section>
  </menu>
  <menu id="syntax_menu">
    <section>
      <attribute name="label">Highlight Mode</attribute>
      <item>
        <attribute name="label">C</attribute>
      </item>
      <item>
        <attribute name="label">C++</attribute>
      </item>
      <item>
        <attribute name="label">CSS</attribute>
      </item>
      <item>
        <attribute name="label">HTML</attribute>
      </item>
      <item>
        <attribute name="label">JavaScript</attribute>
      </item>
      <item>
        <attribute name="label">Python</attribute>
      </item>
    </section>
  </menu>
  <menu id="tabs_v_spaces_menu">
    <section>
      <attribute name="label">Indentation</attribute>
      <item>
        <attribute name="label">Tabs</attribute>
        <attribute name="action">indent.style('tabs')</attribute>
        <attribute name="role">radio</attribute>
      </item>
      <item>
        <attribute name="label">Spaces</attribute>
        <attribute name="action">indent.style('spaces')</attribute>
        <attribute name="role">radio</attribute>
      </item>
    </section>
    <section>
      <submenu>
        <attribute name="label">Spaces per Tab</attribute>
        <section>
          <item>
            <attribute name="label">2</attribute>
          </item>
          <item>
            <attribute name="label">3</attribute>
          </item>
          <item>
            <attribute name="label">4</attribute>
          </item>
          <item>
            <attribute name="label">5</attribute>
          </item>
          <item>
            <attribute name="label">8</attribute>
          </item>
        </section>
      </submenu>
      <submenu>
        <attribute name="label">Indentation Size</attribute>
        <section>
          <item>
            <attribute name="label">2</attribute>
          </item>
          <item>
            <attribute name="label">3</attribute>
          </item>
          <item>
            <attribute name="label">4</attribute>
          </item>
          <item>
            <attribute name="label">5</attribute>
          </item>
          <item>
            <attribute name="label">8</attribute>
          </item>
        </section>
      </submenu>
    </section>
  </menu>
</interface>
